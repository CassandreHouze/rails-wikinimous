<button type="button" class="btn btn-info my-2"><%= link_to 'Create an article', new_article_path%></button>

<div class="container">
<h1 class="border py-4 my-2 text-center">MY ARTICLES</h1>

<% @articles.each do |article| %>
  <div class="container border d-flex justify-content-between align-items-center">
    <div>
    <h3><%= link_to article.title, article_path(article.id)%></h3>
    <p><%= article.content %></p>
    </div>
    <div>
    <p><%= link_to "Edit", edit_article_path(article.id) %></p>
    <p><%= link_to "Delete", article_path(article),
          method: :delete,
          data: { confirm: "Are you sure?" } %></p>
    </div>
  </div>
<% end %>
</div>
